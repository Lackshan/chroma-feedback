[disable]

disable =
	bad-continuation,
	bad-whitespace,
	cyclic-import,
	duplicate-code,
	global-statement,
	missing-docstring,
	protected-access,
	unused-argument

good-names =
	ip,
	color,
	devices,
	groups,
	lights,
	metadata,
	mock,
	wording

[format]

indent-string = '\t'
max-line-length = 280